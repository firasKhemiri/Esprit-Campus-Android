<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/action_bar_gradient</item>
    </style>


    <style name="blueish" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/blueish_color</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/blueish_color</item>
    </style>




    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/back_but</item>
        <item name="android:layout_height">match_parent</item>

    </style>


    <style name="backbutton">
        <item name="navigationIcon">@drawable/back</item>
        <item name="android:height">20dp</item>
        <item name="android:width">20dp</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>


    <style name="TextComponent"/>

    <style name="TextComponent.ItemRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextComponent.ItemRow.Selectable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>



    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextAppearance.ItemExample">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5f5f5f</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


    <style name="EventSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#bf6e46</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#cbcbcb</item>
    </style>


</resources>