<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/photocouv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/material_flat"
        android:tint="#6a373737"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoprof"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="-88dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_avatar"
        android:elevation="8dp"
        app:border_width="2dp"
        app:border_color="#FFF"
        app:layout_scrollFlags="scroll"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changer photo de profil"
        android:layout_gravity="center"
        android:id="@+id/change_photoprof"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/action_bar_start"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changer photo de couverture"
        android:layout_gravity="center"
        android:id="@+id/change_photocouv"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"

        android:textColor="@color/action_bar_start"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/bio"
            android:hint="Bio  "
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrire"
        android:layout_gravity="center"
        android:id="@+id/btnLogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>


</LinearLayout>