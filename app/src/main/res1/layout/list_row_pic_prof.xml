<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:color="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        cardview:cardCornerRadius="8dp"
        cardview:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            >



            <RelativeLayout
                android:id="@+id/parentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="40dp">


                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:maxHeight="520dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp">





                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4h"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#adadad"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/postname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nasd"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/parentView"
                android:layout_alignParentStart="true" />




            <RelativeLayout
                android:id="@+id/commentlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postname"

                android:layout_marginLeft="130dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/postcomments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"

                    android:layout_marginTop="2dp"
                    android:layout_marginStart="24dp" />


                <ImageButton
                    android:id="@+id/add_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:background="#00000000"

                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="4dp"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postname"

                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/add_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/not_liked"
                android:background="#00000000"

                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitStart"
                android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"

                    android:layout_marginTop="2dp"
                    android:layout_marginStart="22dp" />



            </RelativeLayout>
            <TextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nasd"
                android:textSize="12sp"
                android:layout_marginStart="50dp"
                android:layout_alignTop="@+id/commentlay"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>