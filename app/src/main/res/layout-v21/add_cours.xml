<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="8dp"
        cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/pdf"
                android:id="@+id/file_pic"
                android:visibility="visible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lien de fichier"
                android:textSize="20sp"
                android:textColor="@color/action_bar_center_dark"
                android:id="@+id/path"
                android:layout_marginStart="1dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/file_pic"
                android:visibility="visible"/>

        </RelativeLayout>



        <Button
        android:text="Choisir fichier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_pic"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ecrivez quelque chose"
            android:textSize="20sp"
            android:textColor="@color/action_bar_center_dark"
            android:layout_marginStart="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/descri"
                android:layout_marginStart="10dp"/>


        <Button
            android:text="Valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valider"
            android:layout_gravity="center"

            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

    </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>