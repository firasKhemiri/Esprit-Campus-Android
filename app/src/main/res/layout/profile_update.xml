<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photocouv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/material_flat"
        android:tint="#6a373737"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoprof"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="-88dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_avatar"
        android:elevation="8dp"
        app:border_width="2dp"
        app:border_color="#FFF"
        app:layout_scrollFlags="scroll"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changer photo de profil"
        android:layout_gravity="center"
        android:id="@+id/change_photoprof"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#565656"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changer photo de couverture"
        android:layout_gravity="center"
        android:id="@+id/change_photocouv"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"

        android:textColor="#565656"/>




    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nom"
            android:hint="Changer nom  "
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/prenom"
            android:hint="Changer prenom  "
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="Changer email "
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/bio"
            android:hint="Changer bio  "
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone"
            android:hint="Changer numéro de téléphone"
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/birthday"
            android:hint="Changer date de naissance"
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/adress"
            android:hint="Changer adresse"
            android:layout_marginStart="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier compte"
        android:layout_gravity="center"
        android:id="@+id/update"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#565656"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changer mot de passe"
        android:layout_gravity="center"
        android:id="@+id/pass"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#565656"
        android:visibility="gone"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer compte"
        android:layout_gravity="center"
        android:id="@+id/delete_user"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#565656"
        android:visibility="gone"/>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>