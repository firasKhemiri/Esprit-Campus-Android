<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <RelativeLayout
            android:id="@+id/mess_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/mess_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Time"
                android:textSize="17sp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/mess_time_space"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/activity_horizontal_margin"

            android:layout_below="@+id/mess_time"
            android:paddingBottom="2dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/con_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00ffffff"
                android:src="@drawable/user_avatar"
                android:layout_alignBottom="@+id/layout"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="2dp"
                    android:maxWidth="270dp"
                    android:padding="4dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="the the example. Android charting application xml ui design tutorial with example. Android."
                    android:textColor="#414040"
                    android:textSize="17sp" />
                <!-- android:text="the esprit. Android charting application xml ui design tutorial with esprit. Android charting application xml ui design tutorial with esprit. Android charting application xml ui design tutorial with esprit."
                    -->


                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>