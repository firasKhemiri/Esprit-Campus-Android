<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Je suis"
            android:textSize="20dp"
            android:layout_marginStart="25dp"
            android:id="@+id/joinq1"/>

        </RelativeLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <RadioButton
            android:text="Etudiant(e)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etud_rad"
            android:checked="true"/>


        <RadioButton
            android:text="Professeur(e)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prof_rad" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="J'appartient au departement"
        android:textSize="20dp"
        android:layout_marginStart="25dp"
        android:id="@+id/joinq2"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/choix_dep"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="J'appartient au classe"
        android:textSize="20dp"
        android:layout_marginStart="25dp"
        android:id="@+id/joinq3"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/choix_classe"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Message (optionnel)"
        android:textSize="20dp"
        android:layout_marginStart="25dp"
        android:id="@+id/joinq4"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textMultiLine"

        android:ems="10"
        android:id="@+id/message"
        style="@style/AlertDialog.AppCompat.Light"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer demande"
            android:id="@+id/send"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"/>

    </RelativeLayout>


</LinearLayout>