<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:color/transparent">

    <FrameLayout


        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginEnd="10dp"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_frag_shape"
        android:padding="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="420dp"
            android:minWidth="400dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView

                android:id="@+id/school_card"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="55dp"
                        android:layout_height="51dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/graduate_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="22dp"
                        android:layout_toEndOf="@+id/circleImageView"
                        android:text="Type Utilisateur: Etudiant"
                        android:id="@+id/school_text"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/followers_card"
                    android:layout_width="157.5dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/followers_pic"
                            android:layout_width="55dp"
                            android:layout_height="51dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/follower_user_icon" />

                        <RelativeLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/followers_pic">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:text="AbonnÃ©s" />

                            <TextView
                                android:id="@+id/followers_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView5"
                                android:layout_centerHorizontal="true"
                                android:text="530" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/following_card"
                    android:layout_width="157.5dp"
                    android:layout_height="65dp"
                    android:layout_alignTop="@+id/followers_card"
                    android:layout_toEndOf="@+id/followers_card"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/following_pic"
                            android:layout_width="55dp"
                            android:layout_height="51dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/following_user_icon" />

                        <RelativeLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/following_pic">

                            <TextView
                                android:id="@+id/abonn_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:text="Suivis" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/abonn_text"
                                android:layout_centerHorizontal="true"
                                android:text="530"
                                android:id="@+id/following_text"/>
                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/adr_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/adr_pic"
                        android:layout_width="55dp"
                        android:layout_height="51dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/home_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="22dp"
                        android:layout_toEndOf="@+id/adr_pic"
                        android:text="Adresse: Mourouj 3"
                        android:id="@+id/adr_text"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="170.5dp"
                android:layout_height="65dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/birthday_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/date_pic"
                        android:layout_width="55dp"
                        android:layout_height="51dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/birthday_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="22dp"
                        android:layout_toEndOf="@+id/date_pic"
                        android:text="11/04/1758"
                        android:id="@+id/birthday_text"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>