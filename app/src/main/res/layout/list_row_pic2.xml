<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:color="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="8dp"
        cardview:cardUseCompatPadding="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp">



            <RelativeLayout
                android:id="@+id/parentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="40dp">


                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:maxHeight="520dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="sdfsdf"
                    android:layout_toEndOf="@+id/profimg"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_avatar"
                    app:border_color="@android:color/white"
                    app:layout_behavior="saulmm.myapplication.Main.Profile.AvatarImageBehavior"
                    android:layout_marginStart="15dp"
                    android:id="@+id/profimg"
                    android:scaleType="centerCrop" />


                <ImageButton
                    android:id="@+id/location_but"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:background="#00000000"
                    android:layout_marginStart="288dp"
                    android:layout_marginTop="9dp"

                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitStart"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4h"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#adadad"/>


                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:text="test"
                    android:maxLines="2"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="9dp"
                    android:textColor="#adadad"/>

            </RelativeLayout>





            <RelativeLayout

                android:id="@+id/decoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/parentView"
                android:layout_alignParentStart="true">

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/commentlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/decoy"
                android:layout_marginBottom="4dp"
>

                <TextView
                    android:id="@+id/postcomments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="1.5dp"
                    android:layout_alignStart="@+id/add_comment"
                    android:layout_marginStart="26dp"

                    android:text="0"
                    android:textSize="15sp" />


                <ImageButton
                    android:id="@+id/add_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:background="#00000000"

                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="187dp"
                    />




                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:src="@drawable/share"
                    android:background="#00000000"
                    android:tint="#4e4e4e"

                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="1.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="75dp"

                    android:visibility="gone"

                    />



                <ImageButton
                    android:id="@+id/add_like"
                    android:layout_width="35dp"
                    android:layout_height="23dp"
                    android:src="@drawable/not_liked"
                    android:background="#00000000"

                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="127dp"
                    />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/add_like"
                    android:layout_marginStart="25dp"

                    android:layout_marginTop="1.5dp"
                    android:text="0"
                    android:textSize="15sp" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/commentlay"
                android:layout_marginEnd="7dp">

                <TextView
                    android:id="@+id/postname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="testf"
                    android:textSize="16sp"
                    android:textColor="#6c6c6c"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>